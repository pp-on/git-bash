wplistpl (){ #list plugins and copy selection"
    plugins=$(wp plugin list -field=name)
    i=1
    for p in $plugins; do
        echo "$i. $p"
        (( i++ ))
    done
    echo "Select"
    read i
    i=$(i-1)
    echo "$plugins[$i]" | xsel -ib
    echo "$plugins[$i] copied"
}

